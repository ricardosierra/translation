{
    "name": "ricardosierra/translation",
    "description": "An easy automatic database driven translator for Laravel 5.*",
    "tags": ["lang", "translation", "translate", "localization", "localize", "laravel"],
    "license": "MIT",
    "authors": [
        {
            "name": "Ricardo Sierra",
            "email": "ricardo@ricardosierra.com.br"
        },
        {
            "name": "Kunle Adekoya",
            "email": "crfystoline@gmail.com"
        },
        {
            "name": "Steve Bauman",
            "email": "steven_bauman@outlook.com"
        },
        {
            "name": "Levan Velijanashvili",
            "email": "me@stichoza.com"
        }
    ],
    "require": {
        "php": ">=7.0.0",
        "illuminate/validation": "*",
        "illuminate/database": "*",
        "illuminate/support": "*",
        "guzzlehttp/guzzle": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "doctrine/dbal": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "~4|~5|~6|~7|~8"
    },
    "archive": {
      "exclude": ["/tests"]
    },
    "autoload": {
        "psr-4": {
            "RicardoSierra\\Translation\\": "src/",
            "Waavi\\Translation\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "RicardoSierra\\Translation\\Tests\\": "tests/",
            "Waavi\\Translation\\Tests\\": "tests/"
        }
    },
    "replace": {
        "waavi/translation":"2.*"
    },
    "extra": {
        "laravel": {
            "providers": [
                "RicardoSierra\\Translation\\TranslationServiceProvider"
            ],
            "aliases": {
              "Translation": "RicardoSierra\\Translation\\Facades\\Translation"
            }
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
